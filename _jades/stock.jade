              tr.item
                td
                  h2 AMP00001                
                td
                  h2  Apple MacBook Pro 
                td
                  h2  S/. 3000.00
                td
                  h2  S/. 2900.00  
                td
                  h2  UND
                td
                  h2  Apple  
                td
                  h2  2 Noviembre, 2017
                td
