                  a(href="#")
                    i.ion-clipboard  
            - }
        .list_products_wrapper
          .new_products
            .new_products_wrapper
              form
                   
                .field
                  label Codigo: 
                  input(type="text" value="P0001")
                .field
                  label Nombre:
                  input(type="text" value="Apple MacBook Pro") 
                .field
                  label Descripcion:
                  textarea(value="Lorem Ipsum es simplemente el texto de relleno de las imprentas y archivos de texto. Lorem Ipsum ha sido el texto de relleno estándar de las industrias desde el año 1500, cuando un impresor (N. del T. persona que se dedica a la imprenta) desconocido usó una galería de textos y los mezcló de tal manera que logró hacer un libro de textos especimen. ")
                .field_inline  
                  .field
                    label Precio:
                    input(type="text" value="3000")    
                  .field
                    label Precio Mayor:
                    input(type="text" value="2900")    
                .field
                  label Unidad:
                  select
                    option UND 
                    option CAJA
                .field
                  label Marca:
                  select
                    option Apple 
                    option Lenovo
                .field.load_file
                  label Imagen Mediano
                  input#file-7.inputfile.inputfile-6(type='file', name='nombre_archivo', required='required', data-multiple-caption='{count} archivos seleccionados', multiple='true')
                  label.file-content(for='file-7')
                    span
                    strong
                      i.fa.fa-file-image-o 
                .field.load_file
                  label Imagen Largo
                  input#file-7.inputfile.inputfile-6(type='file', name='nombre_archivo', required='required', data-multiple-caption='{count} archivos seleccionados', multiple='true')
                  label.file-content(for='file-7')
                    span
                    strong
                      i.fa.fa-file-image-o 
                    
                .button_auth
                  button(type="submit") Registrar
                    i.ion-android-done
      
